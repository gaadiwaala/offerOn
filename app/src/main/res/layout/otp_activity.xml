<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bk_screen"
    tools:context=".otp_activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




        <LinearLayout
            android:id="@+id/layout_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button_otp"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_marginLeft="20sp"
                android:src="@drawable/back_btn_image" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_otp_logo"
            android:layout_below="@id/layout_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/circle_back_otp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/otp_logo"/>

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_otp_txt"
            android:layout_below="@+id/layout_otp_logo"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="16sp"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP"
            android:letterSpacing="0.1"
            android:textColor="@color/white"
            android:textSize="35sp"/>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_no1"
            android:layout_below="@+id/layout_otp_txt"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="17sp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75sp"
                android:layout_marginRight="75sp"
                android:textAlignment="center"
                android:text="Please enter otp received on your mobile number"
                android:letterSpacing="0.1"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="48sp"
            android:layout_below="@+id/layout_no1"
            android:layout_width="wrap_content"
            android:background="@drawable/backgrd_wt_curve"
            android:layout_height="match_parent">





            <LinearLayout
                android:id="@+id/linear_no2"
                android:layout_marginTop="77sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_no3"
                android:layout_below="@+id/linear_no2"
                android:layout_marginTop="30sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="350sp"
                    android:layout_height="50sp"
                    android:hint="878xxx xxx89"
                    android:gravity="center"
                    android:background="@drawable/edittext_bk_shadow"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_otp"
                android:layout_below="@+id/layout_no3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:gravity="center"
                android:background="@drawable/otp_bground"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginTop="27sp"
                    android:layout_marginBottom="27sp"
                    android:textAlignment="center"
                    android:background="@drawable/edittext_otp_bcklogo"/>

                <TextView
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:textAlignment="center"
                    android:layout_marginTop="27sp"
                    android:layout_marginBottom="27sp"
                    android:background="@drawable/edittext_otp_bcklogo"/>


                <TextView
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginStart="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="27sp"
                    android:layout_marginBottom="27sp"
                    android:background="@drawable/edittext_otp_bcklogo"/>


                <TextView
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginStart="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="27sp"
                    android:layout_marginBottom="27sp"
                    android:background="@drawable/edittext_otp_bcklogo"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_textview_no11"
                android:layout_below="@+id/linear_layout_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:letterSpacing="0.1"
                    android:text="Resend OTP"/>

            </LinearLayout>

            <Button
                android:id="@+id/submit_otp_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:layout_marginTop="34sp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:layout_below="@+id/layout_textview_no11"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/circle_btn_bkground">

            </Button>



        </RelativeLayout>

            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>